{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json",
    "./tsconfig.app.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    /* Paths eliminado para usar rutas relativas en lugar del alias @/
    "paths": {
      "@/*": ["./src/*"]
    },
    */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "skipLibCheck": true
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/types/**/*.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
