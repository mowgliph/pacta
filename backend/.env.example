# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
API_PREFIX=/api

# Database Configuration (SQLite)
DATABASE_URL=file:./data/pacta.db
DATABASE_PROVIDER=sqlite
DB_LOGGING=false
DB_SYNC=false

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_REFRESH_EXPIRATION=7d

# Local Storage Configuration
LOCAL_STORAGE_PATH=./data/storage
STORAGE_MAX_SIZE=1gb
STORAGE_COMPRESS_FILES=true
UPLOAD_DIR=./data/uploads
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt
FILE_COMPRESSION_ENABLED=true
FILE_COMPRESSION_LEVEL=6

# Local Cache Configuration
CACHE_TTL=86400 # 24 hours in seconds
CACHE_CHECK_PERIOD=600 # 10 minutes in seconds

# Frontend URL (Local)
FRONTEND_URL=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./data/logs/app.log
LOG_MAX_SIZE=5m
LOG_MAX_FILES=5
LOG_CONSOLE=true

# Security Configuration
ENCRYPTION_KEY=your-encryption-key-here
SALT_ROUNDS=10
SESSION_SECRET=your-session-secret-here
ENABLE_HTTPS=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# Backup Configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_PATH=./data/backups
DB_BACKUP_INTERVAL=86400
DB_BACKUP_KEEP_DAYS=7

# Installation Configuration
INSTALL_PATH="C:\\Program Files\\PACTA"
SERVICE_NAME="PACTAService"
DB_BACKUP_ON_UPDATE=true

# Performance Configuration
MAX_CONNECTIONS=50
REQUEST_TIMEOUT=30000 # 30 seconds
INDEXING_BATCH_SIZE=100
MAX_SEARCH_RESULTS=1000

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_LOCAL_BACKUP=true
ENABLE_AUTO_UPDATE=false
ENABLE_ERROR_REPORTING=false
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false # Disabled for offline mode
ENABLE_PASSWORD_RESET=false # Disabled for offline mode
ENABLE_TWO_FACTOR=false

# Windows Service Configuration
WIN_SERVICE_ACCOUNT="LocalSystem"
WIN_SERVICE_STARTUP="auto"
WIN_SERVICE_DEPENDENCIES=""

# Rate Limiting (Local)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=*

# Cron Jobs Configuration
CRON_ENABLED=true
CRON_TIMEZONE=America/Havana

# Local Error Reporting
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_EMAIL=admin@company.com
ERROR_LOG_PATH=logs/errors.log

# Email Configuration (Optional - only used when online)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM="PACTA System <noreply@company.com>"
SMTP_SECURE=false

# Monitoring Configuration (Optional - only used when online)
MONITORING_ENABLED=true
MONITORING_INTERVAL=60000
MONITOR_CPU=true
MONITOR_MEMORY=true
MONITOR_STORAGE=true

# Search Configuration
SEARCH_INDEX_PATH=./search_index
SEARCH_BATCH_SIZE=50
SEARCH_MAX_RESULTS=100

# Document Processing
MAX_DOCUMENT_SIZE=52428800 # 50MB in bytes
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,txt
DOCUMENT_SCAN_ENABLED=true
