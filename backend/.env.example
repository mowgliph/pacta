# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
IS_OFFLINE_MODE=true

# Database Configuration (SQLite)
DATABASE_URL="file:./prisma/local.db"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key"
JWT_EXPIRES_IN="30d"
JWT_REFRESH_SECRET="your-super-secure-jwt-refresh-key"
JWT_REFRESH_EXPIRES_IN="90d"

# Local Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Local Cache Configuration
CACHE_TTL=86400 # 24 hours in seconds
CACHE_CHECK_PERIOD=600 # 10 minutes in seconds

# Frontend URL (Local)
FRONTEND_URL=http://localhost:5173

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
ENABLE_FILE_LOGGING=true
MAX_LOG_SIZE=10485760 # 10MB in bytes
MAX_LOG_FILES=5

# Security Configuration
ENABLE_HTTPS=false
SSL_KEY_PATH=
SSL_CERT_PATH=
ENCRYPTION_KEY="your-super-secure-encryption-key"

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY="0 0 * * *" # Daily at midnight
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups
MAX_BACKUP_SIZE=1073741824 # 1GB in bytes

# Installation Configuration
INSTALL_PATH="C:\\Program Files\\PACTA"
SERVICE_NAME="PACTAService"
DB_BACKUP_ON_UPDATE=true

# Performance Configuration
MAX_CONNECTIONS=50
REQUEST_TIMEOUT=30000 # 30 seconds
INDEXING_BATCH_SIZE=100
MAX_SEARCH_RESULTS=1000

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_LOCAL_BACKUP=true
ENABLE_AUTO_UPDATE=false
ENABLE_ERROR_REPORTING=false
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false # Disabled for offline mode
ENABLE_PASSWORD_RESET=false # Disabled for offline mode
ENABLE_TWO_FACTOR=false

# Windows Service Configuration
WIN_SERVICE_ACCOUNT="LocalSystem"
WIN_SERVICE_STARTUP="auto"
WIN_SERVICE_DEPENDENCIES=""

# Rate Limiting (Local)
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000 # Higher limit for local usage

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Cron Jobs Configuration
CRON_ENABLED=true
CRON_TIMEZONE=America/Havana

# Local Error Reporting
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_EMAIL=admin@company.com
ERROR_LOG_PATH=logs/errors.log

# Email Configuration (Optional - only used when online)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM="PACTA System <noreply@company.com>"
SMTP_SECURE=false

# Monitoring Configuration (Optional - only used when online)
ENABLE_MONITORING=false
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Search Configuration
SEARCH_INDEX_PATH=./search_index
SEARCH_BATCH_SIZE=50
SEARCH_MAX_RESULTS=100

# Document Processing
MAX_DOCUMENT_SIZE=52428800 # 50MB in bytes
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,txt
DOCUMENT_SCAN_ENABLED=true
VIRUS_SCAN_ENABLED=false # Disabled for offline mode

# Local Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_PATH=./backups/database
DB_BACKUP_FREQUENCY="0 */6 * * *" # Every 6 hours
DB_BACKUP_RETENTION=7 # Keep backups for 7 days

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_PATH=logs/audit.log
AUDIT_RETENTION_DAYS=90

# Cache Storage
CACHE_STORAGE_PATH=./cache
CACHE_MAX_SIZE=1073741824 # 1GB in bytes
CACHE_CLEANUP_INTERVAL=3600 # 1 hour in seconds

