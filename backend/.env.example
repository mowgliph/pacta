# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration (Prisma)
DATABASE_URL="sqlite:./prisma/dev.db"
# Para PostgreSQL:
# DATABASE_URL="postgresql://user:password@localhost:5432/pacta_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-key-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM="PACTA System <noreply@pacta.com>"
SMTP_SECURE=false

# File Upload Configuration (Multer)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx

# Rate Limiting (Express Rate Limit)
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration (Node Cache)
CACHE_TTL=3600 # 1 hour in seconds

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:5173

# Logging Configuration (Winston)
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Security Configuration
CORS_ORIGIN=http://localhost:5173
ENABLE_HTTPS=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# Cron Jobs Configuration
CRON_ENABLED=true
CRON_TIMEZONE=UTC

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR=false

# API Keys (for external services)
# Add your external service API keys here
# GOOGLE_MAPS_API_KEY=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=

# Monitoring and Analytics
ENABLE_MONITORING=false
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY="0 0 * * *" # Daily at midnight
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups

# Session Configuration
SESSION_SECRET="your-session-secret-change-in-production"
SESSION_COOKIE_NAME="pacta_session"
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Error Reporting
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_EMAIL=admin@pacta.com

# Performance Tuning
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30000 # 30 seconds 