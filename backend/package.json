{
  "type": "module",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "list": "^2.0.19",
    "multer": "^1.4.5-lts.1",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.10.0",
    "sequelize": "^6.37.6",
    "sqlite3": "^5.1.7"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prebuild": "node build.js && cd ../frontend && npm run build",
    "build": "pkg . --out-path dist",
    "postbuild": "mkdir -p dist/frontend && cp -r ../frontend/dist dist/frontend"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "nodemon": "^3.1.9",
    "pkg": "^5.8.1"
  },
  "bin": "server.js",
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "assets": [
      "models/**/*",
      "config/**/*",
      ".env",
      "database/**/*",
      "../frontend/dist/**/*"
    ]
  }
}
