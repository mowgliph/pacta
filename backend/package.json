{
  "name": "pacta-backend",
  "version": "1.0.0",
  "description": "PACTA Backend API",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "build": "node src/build.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepare": "husky install",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "db:seed": "node src/database/seeders/index.js",
    "start": "node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "validate": "npm run lint && npm run format:check && npm test",
    "service:install": "node src/scripts/service.js install",
    "service:uninstall": "node src/scripts/service.js uninstall",
    "service:start": "node src/scripts/service.js start",
    "service:stop": "node src/scripts/service.js stop",
    "service:restart": "node src/scripts/service.js restart",
    "service:status": "node src/scripts/service.js status"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lokijs": "^1.5.12",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-machine-id": "^1.1.12",
    "node-schedule": "^2.1.1",
    "node-windows": "^1.0.0-beta.8",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@eslint/eslintrc": "^3.0.0",
    "@eslint/js": "^8.56.0",
    "@prisma/client": "^6.5.0",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^14.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.9",
    "pkg": "^5.8.1",
    "prettier": "^3.2.5",
    "prisma": "^6.5.0",
    "supertest": "^6.3.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ]
  },
  "bin": "src/server.js",
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "assets": [
      "src/models/**/*",
      "src/config/**/*",
      ".env",
      "src/database/**/*",
      "../frontend/dist/**/*"
    ]
  }
}
