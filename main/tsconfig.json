{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitOnError": true,
    "types": ["node"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["./dist", "../renderer", "../node_modules"]
}
